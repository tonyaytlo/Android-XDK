<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.layer.ui.message.MessageItemLegacyViewModel" />
    </data>

    <com.layer.ui.util.views.SwipeableItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_swipeable_item_background_selector">

        <LinearLayout
            android:id="@+id/leavebehind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layer_ui_item_leavebehind"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/layer_ui_primary_icon_size"
                android:layout_height="@dimen/layer_ui_primary_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layer_ui_padding_normal"
                android:src="@drawable/ic_delete_white_24dp"
                android:tint="@color/layer_ui_icon_enabled" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/swipeable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ui_swipeable_item_foreground_selector"
            android:duplicateParentState="true"
            android:orientation="vertical"
            android:paddingRight="@dimen/layer_ui_margin_large">

            <LinearLayout
                android:id="@+id/time_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layer_ui_message_item_time_group_padding"
                android:paddingTop="@dimen/layer_ui_message_item_time_group_padding"
                android:layout_marginBottom="@dimen/layer_ui_message_cluster_space_gap"
                android:layout_marginTop="@dimen/layer_ui_message_cluster_space_gap"
                android:visibility="@{viewModel.shouldShowDateTimeForMessage ? View.VISIBLE : View.GONE}">

                <TextView
                    android:id="@+id/time_group_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.timeGroupDay}"
                    android:textColor="@color/layer_ui_text_gray"
                    android:textSize="@dimen/layer_ui_text_size_message_item_metadata"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_group_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.groupTime}"
                    android:textColor="@color/layer_ui_text_gray"
                    android:textSize="@dimen/layer_ui_text_size_message_item_metadata" />
            </LinearLayout>

            <!--Space use to separate messages base on Cluster rule-->
            <Space
                android:id="@+id/cluster_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layer_ui_message_cluster_space_gap"
                android:visibility="@{viewModel.clusterSpaceVisible ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/senderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layer_ui_message_item_sender_margin_left"
                android:text="@{viewModel.senderName}"
                android:layout_marginBottom="@dimen/layer_ui_message_item_padding"
                android:textColor="@color/layer_ui_text_gray"
                android:textSize="@dimen/layer_ui_text_size_message_item_metadata"
                android:visibility="@{viewModel.shouldShowDisplayName ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/layer_ui_message_item_cell_padding_bottom"
                    android:paddingLeft="@dimen/layer_ui_message_item_avatar_padding_left"
                    android:paddingRight="@dimen/layer_ui_avatar_right_padding_message">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.avatarVisibility ? View.VISIBLE : View.GONE}">

                        <com.layer.ui.avatar.AvatarView
                            android:id="@+id/avatar"
                            android:layout_width="@dimen/layer_ui_avatar_width"
                            android:layout_height="@dimen/layer_ui_avatar_height"
                            app:participants="@{viewModel.participants}" />

                        <com.layer.ui.presence.PresenceView
                            android:id="@+id/presence"
                            android:layout_width="@dimen/layer_ui_avatar_presence_height"
                            android:layout_gravity="bottom|right"
                            android:layout_height="@dimen/layer_ui_avatar_presence_height"
                            android:visibility="@{viewModel.presenceVisible ? View.VISIBLE : View.GONE}"
                            app:participants="@{viewModel.participants}"/>

                    </FrameLayout>
                    <!--Empty space when Avatar visibility is set to View.GONE so that messages can align properly-->
                    <android.widget.Space
                        android:layout_width="@dimen/layer_ui_avatar_width"
                        android:layout_height="@dimen/layer_ui_avatar_width"
                        android:visibility="@{viewModel.shouldDisplayAvatarSpace ? View.VISIBLE : View.GONE}"/>

                </RelativeLayout>

                <!--Space positions message to the right if it's my message-->
                <android.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="@{viewModel.myCellType ? View.VISIBLE : View.GONE}" />

                <FrameLayout
                    android:id="@+id/cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layer_ui_message_item_padding"
                    android:layout_marginBottom="@dimen/layer_ui_message_item_padding"
                    android:alpha="@{viewModel.messageCellAlpha}"
                    android:minHeight="@dimen/layer_ui_message_item_cell_min_height"
                    android:minWidth="@dimen/layer_ui_message_item_cell_min_width" />

            </LinearLayout>

            <TextView
                android:id="@+id/receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/layer_ui_message_item_receipt_margin"
                android:text="@{viewModel.readReceipt}"
                android:textColor="@color/layer_ui_text_gray"
                android:textSize="@dimen/layer_ui_text_size_message_item_metadata"
                android:visibility="@{viewModel.readReceiptVisible ? View.VISIBLE : View.GONE}" />

        </LinearLayout>
    </com.layer.ui.util.views.SwipeableItem>
</layout>