<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="messageStyle"
            type="com.layer.ui.message.messagetypes.MessageStyle" />
    </data>

    <merge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cell_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:linksClickable="true"
            android:textColorLink="@{messageStyle.textColor}"
            android:textColor="@{messageStyle.textColor}"
            android:typeface="@{messageStyle.textTypeface}"
            android:textSize="@dimen/layer_ui_text_size_message_item"/>


        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/text_cell_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </merge>
</layout>